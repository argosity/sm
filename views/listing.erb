<div class="listing">
  <% shows.each do | show | -%>
  <div class="show" data-show-identifier="<%= show.identifier %>">
    <% puts '-' * 80 %>
    <% if asset.exists?(show.image) %>
    <img class="logo" src="<%= asset.url_for(show.image, 'medium' ) %>" />
    <% end %>
    <div class="content">
      <div class="main">
        <div class="info">
          <div class="title">
            <% if show.presenter %>
            <% if asset.exists?(show.presenter['logo']) %>
            <img class="presenter" src="<%= asset.url_for(show.presenter['logo'], 'thumbnail' ) %>" />
            <% else %>
            <h3 class="presenter"><%= show.presenter['name'] %> presents:</h3>
            <% end %>
            <% end %>
            <h2><%= show.title %></h2>
          </div>
          <h3 class="sub-title"><%= show.sub_title %></h3>
          <p class="description"><%= show.description %></p>
          <div class="show-times">
            <% pp show.times %>
            <% if show.times.any? %>
            <% timeformat = '%l:%M%P ' %>
            <% if show.has_common_time? %>
            <% timeformat = '' %>
            <%= show.occurs.first.strftime('%l:%M%P') %> on
            <% end %>
            <ul class="dates">
              <li><%= show.occurs.map{ |t| t.strftime("#{timeformat}%b #{t.day.ordinalize}") }.join('</li><li>') %></li>
            </ul>
            <% end %>
          </div>
        </div>
        <div class="actions">
          <% if show.can_purchase? %>
          <a href="<%= show.purchase_url %>" class="btn btn-primary btn-purchase">
            Purchase
          </a>
          <% end %>
          <% if show.has_info? %>
          <a href="<%= show.info_url %>" class="btn btn-default btn-info">Information</a>
          <% end %>
        </div>
      </div>

      <div class="venue">
         <% if asset.exists?(show.venue['logo']) %>
         <img class="logo" src="<%= asset.url_for(show.venue['logo'], 'thumbnail' ) %>" />
         <% else %>
         <span class="name"><%= show.venue['name'] %></span>
         <% end %>
         <span class="address"><%= show.venue['address'] %></span>
      </div>

    </div>
  </div>

  <% end -%>
  <p class="credits">
    listing generated by <a href="https://showmaker.com" target="_blank">ShowMaker.com</a>
  </p>
</div>
